#!/bin/bash

set -Eeufo pipefail

printf "\033[3;35m%s\033[m\n" "brew installing..."

# shared
{{ $brews := list
    "mise"
    "gnupg"
    "git"
    "git-secret"
    "docker-compose"
-}}

{{ $casks := list
    "docker"
    "raycast"
    "notion"
    "slack"
    "discord"
    "warp"
    "visual-studio-code"
    "cursor"
    "todoist"
    "microsoft-teams"
    "zoom"
    "google-cloud-sdk"
    "google-drive"
    "google-chrome"
-}}

brew bundle --file=-<<EOF
tap "yutorse/dotfiles", "https://github.com/yutorse/dotfiles"
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
